.login-container
  .bsj-form.login
    h1 Contributor Login
    form
      .form-group
        label Username
        input(type='text', ng-model='credentials.username')
      .form-group
        label Password
        input(type='password', ng-model='credentials.password')
      button(type='submit', ng-click='vm.submit(credentials)') Login
    a.register(href='/admin/register') Register