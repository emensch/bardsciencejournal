.postview
  .single-post
    .img
      img(ng-src='{{ vm.post.photo }}')
      .subject-type
        .subject {{ vm.post.subject }}
        .type {{ vm.post.type }}
    .post-content
      .title {{ vm.post.title }}
      .authors
        span by
        ul
          li(ng-repeat='author in vm.post.authors') 
            a(ng-href='/archive?author={{author}}').author {{ author }}
            span(ng-if='vm.post.authors.length > 1 && !$last') 
              | {{ $index == vm.post.authors.length-2 ? ' and' : ',' }}
      .content(ng-bind-html='vm.post.content')
      .date {{ vm.post.date | date }}
      .tags
        ul
          li(ng-repeat='tag in vm.post.tags') 
            a(ng-href='/archive?tag={{tag}}').tag {{ tag }}
