.home
  .featured
    .section-title 
      span.title Featured
      span.underline
    .post-container
      .post(ng-repeat='post in vm.featured')
        .img
          img(ng-src='{{ post.photo }}')
          .subject-type
            .subject {{ post.subject }}
            .type {{ post.type }}
        .post-content
          .title {{ post.title }}
          .authors
            span by
            ul
              li(ng-repeat='author in post.authors') 
                a(href='/') {{ author }}
                span(ng-if='post.authors.length > 1 && !$last') 
                  | {{ $index == post.authors.length-2 ? ' and' : ',' }}
          .description {{ post.description }}
