.post.bigpost
  .img-container(ng-style='{\'background-image\': \'url(\'+vm.post.photo+\')\'}')
  .title-line
    a(ng-href='/post/{{vm.post.slug}}') {{ vm.post.title }}
  .author-line
    span by
    ul
      li(ng-repeat='author in vm.post.authors') 
        a(href='/') {{ author }}
        span(ng-if='vm.post.authors.length > 1 && !$last') {{ $index == vm.post.authors.length-2 ? ' and' : ',' }}
  .post-content {{ vm.post.content }}